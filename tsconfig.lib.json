{
	"compilerOptions": {
		"declaration": true,
		"declarationDir": "./dist/types",
		"outDir": "./dist",
		"module": "esnext",
		"rootDir": "./",
		"target": "es2021",
		"esModuleInterop": true,
		"moduleResolution": "node",
		"baseUrl": ".",
		"paths": {
			"@/*": ["./*"]
		},
		"jsx": "react-jsx"
	},
	"include": ["stories/**/*.ts", "utils/**/*.ts"],
	"exclude": ["node_modules"]
}
