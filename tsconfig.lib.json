{
	"compilerOptions": {
		"declaration": true,
		"declarationDir": "./dist/types",
		"outDir": "./dist",
		"module": "ESNext",
		"rootDir": "./",
		"target": "ESNext",
		"esModuleInterop": true,
		"moduleResolution": "node",
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"./*"
			]
		},
		"jsx": "react-jsx"
	},
	"include": [
		"stories/**/*.ts",
		"utils/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}